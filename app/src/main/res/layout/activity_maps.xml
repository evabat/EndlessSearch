<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black"
    tools:context="com.eap.sdy60.ge4.eva_b.endlesssearch.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/searchbtn"
            android:padding="10dp"
            android:text="@string/search_btn_txt"
            android:textColor="@color/fontColorSearchBtn" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/startbtn"
            android:padding="10dp"
            android:text="@string/start_btn_txt"
            android:textColor="@color/fontColorStartBtn" />
    </RelativeLayout>
</FrameLayout>
